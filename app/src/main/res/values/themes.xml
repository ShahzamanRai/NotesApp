<resources>
    <!-- Base application theme. -->
    <style name="Theme.KeepNotes" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TitleBarTextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/futura_bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="FuturaBoldTextAppearance">
        <item name="android:fontFamily">@font/futura_bold</item>
    </style>

</resources>
